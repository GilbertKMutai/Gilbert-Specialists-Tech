@page "/hireme"
@rendermode InteractiveAuto
@inherits HiremeBase

<PageTitle>Hire Me</PageTitle>

<section>
    <div class="hireme-intro">
    </div>

    <h4>Hire Me</h4>
   
    <div class="text">
        <p class="bg-text"> Let your projects be worked on by an Expert Software Engineer with <br />
            great communication skills and a quick turn-around.
        </p>

        <p class="sm-text">
            Let your projects be worked on by an Expert Software Engineer with
            great communication skills and a quick turn-around.
        </p>
    </div>

    <div>
        <h5>Click Here!</h5>
    </div>

    <div class="stick"></div> <div class="arrow"></div>
    
        <SfDialog ID="Dialog" CssClass="dialog-box" ShowCloseIcon="false" IsModal="true" @bind-Visible="IsVisible">
            <DialogEvents OnOverlayModalClick="OverlayModalClickHandler"></DialogEvents>
            <DialogTemplates>
                <Content>
                    <CascadingValue Value="@ClientModel">
                        <DataForm OnFormSubmitted="HandleSubmit"></DataForm>
                    </CascadingValue>
                </Content>
            </DialogTemplates>
            <DialogAnimationSettings Effect="DialogEffect.FadeZoom" Duration="850" />
        </SfDialog>

    <div class="hireme-btn"><SfButton Content="Hire Me" CssClass="borders" @onclick="@OpenDialog"></SfButton></div>

</section>

<style>

    #Dialog {
        width: 350px;
        background-color: rgba(78, 0, 243, 0.26);
        border-radius: 10px;
        border-style: none;
    }

    #Dialog .e-dlg-content {
        color: white;
        background-color: transparent;
        width: 325px;
        margin-right: auto;
        margin-left: auto;
        padding: 35px 15px;
    }

         #MyForm .formitem {
            border-radius: 15px;
        }


         #MyForm h4 {
            text-align: center;
        }

         #MyForm .textbox {
            height: 70px;
        }

         #MyForm .submitbtn {
            border-radius: 15px;
            font-weight: 500;
            color: white;
            background-color: #0EAC4D;
            width: 100%;
            padding: 6px 25px;
            transition: .5s ease-in-out;
        }

             #MyForm .submitbtn:hover {
                color: black;
                background-color: white;
                transition: .5s ease-in-out;
            }

    @@media ( max-width:456px ) {

        #Dialog {
            width: 320px;
        }

        #Dialog .e-dlg-content {
        width: 300px;
        padding: 30px 10px;
    }

    }
    
    @@media ( max-width:355px ) {

        #Dialog {
            width: 310px;
        }
    }
</style>