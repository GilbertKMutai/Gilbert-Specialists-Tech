@page "/hireme"
@rendermode InteractiveAuto
@inherits HiremeBase


<PageTitle>Hire Me</PageTitle>

<section>
    <div class="hireme-intro">
        <h4>Hire Me</h4>
    </div>

    <div class="text">
        <i> Get to work with  a  rock-star software engineer with <br />
            great communication skills and a quick turn-around <br />
            for your projects. </i>
    </div>

    <h5>Click Here!</h5>

        <div class="stick"></div> <div class="arrow"></div>

    <SfDialog Width="400px" Height="358px" ID="Dialog" ShowCloseIcon="true" @bind-Visible="@IsVisible" EnableResize="true">
            <DialogTemplates>
                <Content>
                    <CascadingValue Value="@ClientModel">
                        <DataForm></DataForm>
                    </CascadingValue>
                </Content>
            </DialogTemplates>
        <DialogButtons>
            <DialogButton Content="Submit" IsPrimary="true" OnClick="@CloseDialog" />
        </DialogButtons>
        </SfDialog>

    <div class="hireme-btn"><SfButton Content="Hire Me" CssClass="borders" @onclick="@OpenDialog"></SfButton></div>

</section>