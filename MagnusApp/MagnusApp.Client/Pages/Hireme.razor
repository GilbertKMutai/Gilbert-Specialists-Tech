@page "/hireme"
@rendermode @(new InteractiveAutoRenderMode(prerender:false))
@inherits HiremeBase


<PageTitle>Hire Me</PageTitle>

<section>
    <div class="hireme-intro">
        <h4>Hire Me</h4>
    </div>

    <div class="text">
        <i class="bg-text"> Get to work with  rock-star software engineers with <br />
            great communication skills and quick turn-arounds <br />
            for your projects. </i>

        <i class="sm-text"> Get to work with  rock-star software engineers with
            great communication skills and quick turn-arounds 
            for your projects. </i>
    </div>

    <div>
        <h5>Click Here!</h5>
    </div>

    <div class="stick"></div> <div class="arrow"></div>

    <SfDialog ID="Dialog" Width="350px" ShowCloseIcon="true" @bind-Visible="@IsVisible">
            <DialogTemplates>
                <Content>
                    <CascadingValue Value="@ClientModel">
                    <DataForm></DataForm>
                    </CascadingValue>
                </Content>
            </DialogTemplates>
        </SfDialog>
    <div class="hireme-btn"><SfButton Content="Hire Me" CssClass="borders" @onclick="@OpenDialog"></SfButton></div>

</section>
