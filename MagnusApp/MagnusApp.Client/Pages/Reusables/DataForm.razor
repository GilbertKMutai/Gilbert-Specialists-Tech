@rendermode InteractiveAuto
@inherits DataFormBase
<div class="col-lg-12 control-section toast-default-section">
    <SfToast ID="toast_default" @ref="ToastObj" Title="Thanks for reaching out to MagnusQ!" Content="@ToastContent" Timeout="7000" Icon="e-meeting">
        <ToastPosition X="@ToastPosition"></ToastPosition>
    </SfToast>
</div>

<SfDataForm @ref="dataForm" ID="MyForm" Width="330px" Model="@ClientModel" ButtonsAlignment="FormButtonsAlignment.Center" OnValidSubmit="HandleValidSubmit">
    <FormValidator>
        <DataAnnotationsValidator />
    </FormValidator>
    <FormItems>
        <h4>Leave a Message</h4>
        <FormItem Field="@nameof(ClientModel.Subject)" CssClass="formitem">
            <Template>
                <label>Company/Personal Name:</label>
                <SfTextBox Placeholder="Full Name*" @bind-Value="ClientModel.Subject"></SfTextBox>
            </Template>
        </FormItem>
        <FormItem Field="@nameof(ClientModel.From)" CssClass="formitem">
            <Template>
                <label>Email Address:</label>
                <SfTextBox Placeholder="Email Adddress*" @bind-Value="ClientModel.From"></SfTextBox>
            </Template>
        </FormItem>
        <FormItem Field="@nameof(ClientModel.Body)" Placeholder="Comment*" EditorType="FormEditorType.TextArea" CssClass="formitem textbox">
            <Template>
                <label>Message:</label>
                <SfTextBox Placeholder="Comment*" @bind-Value="ClientModel.Body" Multiline="true"></SfTextBox>
            </Template>
        </FormItem>
    </FormItems>
    <FormButtons>
        <SfButton CssClass="submitbtn" typeof="submit">Submit</SfButton>
    </FormButtons>
</SfDataForm>

<style>

    #Dialog .e-dlg-content #MyForm .submitbtn {
        border-radius: 0;
        color: white;
        background-color: #0EAC4D;
        padding: 6px 25px;
        font-weight: 500;
    }

    #toast_default .e-meeting::before {
        content: "\e705";
        font-size: 17px;
    }

    .bootstrap5 #toast_default .e-meeting::before {
        content: "\e763";
        font-size: 20px;
    }

</style>


